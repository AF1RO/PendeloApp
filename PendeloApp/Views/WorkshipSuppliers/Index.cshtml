@model IEnumerable<PendeloApp.Models.WorkshipSupplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Workshipsuppliers</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a class="btn btn-info" asp-action="Map">Display Workshops</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Services)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Services)
            </td>
            <td>
                    @item.Email
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn" style="background-color: orange; color: white;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn" style="background-color: blue; color: white; margin-left: 1px; margin-right: 2px;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn" style="background-color: red; color: white;">Delete</a>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
